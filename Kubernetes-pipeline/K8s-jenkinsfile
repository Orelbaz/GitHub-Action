pipeline {
    agent any
    environment {
        MY_PATH = '/var/lib/jenkins/workspace/K8s-pipeline/Pipelines/'
    }
    triggers {
    // Checking for commits on GitHub every minute
    pollSCM('* * * * *')
    }
    stages {
        stage('Cleanup') {
            steps {
                //cleanup
                sh 'rm -rf *'
            }
        }
        stage('Build') {
            steps {
                sh 'echo "Cloning repository..."'
                sh 'git clone https://github.com/Orelbaz/Pipelines.git'
                //Dockring...
                dir(MY_PATH + 'Kubernetes-pipeline/CoinSite') {
                    script {
                        // Extract the TAG variable from .env file
                        TAG = sh(script: "cat .env | grep TAG | cut -d '=' -f2", returnStdout: true).trim()
                        // Build and push the Docker image....
                        sh "docker build --build-arg TAG=${TAG} -t orelbaz/coinsitek8s:${TAG} ."
                        sh "docker push orelbaz/coinsitek8s:${TAG}"
                    }
                }
            }
        }
        stage('Test-server') {
            steps {
                sh 'echo "Running tests..."'
                sh "/bin/bash ${MY_PATH}Kubernetes-pipeline/Deploy.sh ${TAG} eks-test ${MY_PATH}"
            }
        }
        stage('Aprove') {
            steps {
                sh 'echo "Waiting for approval.."'
                // For auto approval, add '//' before the input line. For manual approval, remove '//' from the input line.
                //input 'Do you want to deploy the project to production?'
            }
        }
        stage('Prod-server') {
            steps {
                sh "/bin/bash ${MY_PATH}Kubernetes-pipeline/Deploy.sh ${TAG} eks-prod ${MY_PATH}"
            }
        }
        stage('Monitoring') {
            steps {
                sh 'echo "Running tests..."'
                sh "/bin/bash ${MY_PATH}Kubernetes-pipeline/Prometheus.sh eks-prod"
            }
        }
    }
}
